{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "plugins": [{
      "name": "tslint-language-service"
    }],
    "outDir": "dist",
    "allowJs": false,
    "target": "es2020",
    "module": "commonjs",
    "watch": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "rootDir": "src",
    "lib": [
      "dom",
      "es2020"
    ],
    "baseUrl": "."
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
